---
import "../styles/global.css";

import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  class?: string;
}
---

<script>
    const theme = (() => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
            return localStorage.getItem("theme") ?? "light";
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
        }
        return "light";
    })();

    document.documentElement.setAttribute("data-theme", theme);
</script>

<html class="h-full" lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="canonical" href={Astro.site} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{Astro.props.title}</title>
        <meta name="description" content="See and control your music seamlessly in-game.">

        <meta property="og:title" content="Overlap">
        <meta property="og:description" content="See and control your music seamlessly in-game.">
        <meta property="og:type" content="website">
        <meta property="og:image" content={new URL("preview.webp", Astro.site)}>
        <meta property="og:url" content={Astro.site}>
        <meta property="og:site_name" content="Overlap">

        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="Overlap">
        <meta name="twitter:description" content="See and control your music seamlessly in-game.">
        <meta name="twitter:image" content={new URL("preview.webp", Astro.site)}>
        <meta name="twitter:image:alt" content="Overlap">

        <meta name="theme-color" content="#10191E">
    </head>
    <body class="flex h-full flex-col dark:bg-[#10191E] dark:text-white">
        <script is:inline>/** prevents firefox from force loading html */</script>
        <NavBar />
        <main class={Astro.props.class}>
            <slot />
        </main>
        <Footer />
    </body>
</html>
